@model IEnumerable<SandwellHotel.Models.HotelRooms>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<!--Create a new hotel room-->
<p>
    <a asp-action="Create">Create New</a>
</p>
<!--Filter by Bedrooms-->
<form asp-action="FilterByBedrooms" method="get">
    <div>
        <label for="Bedrooms">Number of Bedrooms</label>
        <select id="Bedrooms" name="Bedrooms">
            <option value="1">1 Bedroom</option>
            <option value="2">2 Bedroom</option>
            <option value="3">3 Bedroom</option>
            <option value="4">4 Bedroom</option>
            <option value="5">5 Bedroom</option>
        </select>
        <button type="submit">FilterHotels</button>
    </div>
   

</form>
<!--See all rooms-->
<form asp-action="Index">
    <button type="submit">See All rooms</button>
</form>
<!--Display Available Rooms-->
<form asp-action="AvailableRooms">
    <button type ="Submit">Display Available rooms</button>
</form>
<!--Display Unavailable Rooms-->
<form asp-action="UnavailableRooms">
    <button type="submit">Display Unavailable Rooms</button>
</form>
<!--Allow the user to enter a specific location and display hotel rooms in the specified location-->
<form asp-action="Location" method="get">
    <div>
        <label for="tiyon">Location:</label>
        <input type="text" id="tiyon" name="tiyon" />
        <button type="submit">FilterHotels</button>
    </div>
   
</form>

<form asp-action="FilterByPrice" method="get">
    <div>
        <label for="price">FilterByPrice:</label>
        <input type="text" id="price" name="price" />
        <button type="submit">FilterHotels</button>
    </div>
    

</form>




<!--Filter By Price-->
<form method="get" asp-action="FilterPrice">
    
    <label>Min Price:</label>
    <input type ="number" name="minPrice" step="0.01"/>
    <label>Max Price:</label>
    <input type="number" name="maxPrice" step="0.01"/>
    <button type="submit">Filter</button>

</form>

<!--Filter by Names--> <!--DROP DOWN MENU-->
<form asp-action="FilterByName" method="get">
    <div>
        <label for="Name">Name</label>
        <select id="Name" name="Name">
            <option value="City Centre Hotel Room">City Centre Hotel Room</option>
            <option value="Budget Inn"> Budget Inn</option>
            <option value="6th Floor Hotel Room">6th Floor Hotel Room </option>
            <option value="Tiyons Hotel">Tiyons Hotel</option>
            <button type="submit">FilterHotels</button>
        </select>
    </div>

</form>
<!--Sort by Star rating-->

    <a asp-action="SortByStarRating" asp-route-ascendings="true">Sort by Star Rating(Ascending)</a>


    <a asp-action="SortByStarRating" asp-route-ascendings="false">Sort by Star Rating(Descending)</a>
<!--Sort By Guest Rating-->
<a asp-action="SortByGuestRating" asp-route-ascendings="true">Sort by Guest Rating(Ascending)</a>

<a asp-action="SortByGuestRating" asp-route-ascendings="false">Sort by Guest Rating(Descending)</a>




<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePerNight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StarRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuestRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfBeds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerNight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StarRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuestRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfBeds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAvailable)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
